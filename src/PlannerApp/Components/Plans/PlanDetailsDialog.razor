@namespace PlannerApp.Components
<MudDialog>
    <TitleContent>
        @if (_isBusy)
        {
            <MudText Typo="Typo.h6">
                Plan Details Loading ....
            </MudText>
        }
        else
        {
            <MudText Typo="Typo.h6">
                @_plan?.title;
            </MudText>
        }

    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem sm="12" md="5">
                @if (_isBusy)
                {
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" style="Hight:200px;min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                }
                else
                {

                    <!-- Plan Details here -->
                    <img src="@_plan.CoverUrl" style="width:100%;border-radius:5px" />
                    <MudText Typo="Typo.body1">@_plan?.Description</MudText>

                }
            </MudItem>
            <MudItem sm="12" md="7">
                <!--To Do Items here -->
                @if (_isBusy)
                {
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" style="min-width:250px"> </MudSkeleton>
                }
                else
                {
                    <ToDoItem></ToDoItem>
                    <ToDoItem></ToDoItem>
                    <ToDoItem></ToDoItem>
                    <ToDoItem></ToDoItem>
                }

            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Cancel</MudButton>

    </DialogActions>
</MudDialog>
