@namespace PlannerApp.Components

@*UI View Slector ( to Choose between List And Grid Cards ) *@

<MudIconButton Icon="@Icons.Material.Filled.TableView" OnClick="SetPlansCardView" Color="Color.Primary" Disabled="_isPlansCardView"></MudIconButton>
<MudIconButton Icon="@Icons.Material.Filled.GridView" OnClick="SetPlansListView" Disabled="@(!_isPlansCardView)"></MudIconButton>

@if(_isPlansCardView)
{
    <PlanCardsList FetchPlans="GetPlansAsync"></PlanCardsList>
}
else
{
    <PlansTable />

}




